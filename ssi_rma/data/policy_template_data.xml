<odoo>
    <data noupdate="1">
        <record id="rma_policy_template" model="policy.template">
            <field name="name">Standard</field>
            <field name="model_id" ref="model_rma_order_mixin"/>
            <field
                name="state_field_id"
                search="[('model_id.model','=','rma_order_mixin'),('name','=','state')]"
            />
            <field name="sequence" eval="100"/>
            <field name="python_code">result=True</field>
        </record>

        <!-- confirm -->
        <record
            id="rma_policy_template_detail_confirm"
            model="policy.template_detail"
        >
            <field name="template_id" ref="rma_policy_template"/>
            <field
                name="field_id"
                search="[('model_id.model','=','rma_order_mixin'),('name','=','confirm_ok')]"
            />
            <field name="restrict_state" eval="1"/>
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','rma_order_mixin'),('value','=','draft')]"
            />
            <field name="restrict_user" eval="1"/>
            <field name="computation_method">use_group</field>
            <field
                name="group_ids"
                eval="[(6,0,[ref('rma_order_mixin_user_group')])]"
            />
            <field name="restrict_additional" eval="0"/>
        </record>

        <!-- open -->
        <record
            id="rma_policy_template_detail_open"
            model="policy.template_detail"
        >
            <field name="template_id" ref="rma_policy_template"/>
            <field
                name="field_id"
                search="[('model_id.model','=','rma_order_mixin'),('name','=','open_ok')]"
            />
            <field name="restrict_state" eval="1"/>
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','rma_order_mixin'),('value','=','confirm')]"
            />
            <field name="restrict_user" eval="1"/>
            <field name="computation_method">use_group</field>
            <field
                name="group_ids"
                eval="[(6,0,[ref('rma_order_mixin_user_group')])]"
            />
            <field name="restrict_additional" eval="0"/>
        </record>

        <!-- approve -->
        <record
            id="rma_policy_template_detail_approve"
            model="policy.template_detail"
        >
            <field name="template_id" ref="rma_policy_template"/>
            <field
                name="field_id"
                search="[('model_id.model','=','rma_order_mixin'),('name','=','approve_ok')]"
            />
            <field name="restrict_state" eval="1"/>
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','rma_order_mixin'),('value','=','confirm')]"
            />
            <field name="restrict_user" eval="0"/>
            <field name="restrict_additional" eval="1"/>
            <field name="additional_python_code">result = False
                if env.user.id in document.active_approver_user_ids.ids:
                result = True
            </field>
        </record>

        <!-- reject -->
        <record
            id="rma_policy_template_detail_reject"
            model="policy.template_detail"
        >
            <field name="template_id" ref="rma_policy_template"/>
            <field
                name="field_id"
                search="[('model_id.model','=','rma_order_mixin'),('name','=','reject_ok')]"
            />
            <field name="restrict_state" eval="1"/>
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','rma_order_mixin'),('value','=','confirm')]"
            />
            <field name="restrict_user" eval="0"/>
            <field name="restrict_additional" eval="1"/>
            <field name="additional_python_code">result = False
                if env.user.id in document.active_approver_user_ids.ids:
                result = True
            </field>
        </record>

        <!-- restart approval -->
        <record
            id="rma_policy_template_detail_restart_approval"
            model="policy.template_detail"
        >
            <field name="template_id" ref="rma_policy_template"/>
            <field
                name="field_id"
                search="[('model_id.model','=','rma_order_mixin'),('name','=','restart_approval_ok')]"
            />
            <field name="restrict_state" eval="1"/>
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','rma_order_mixin'),('value','=','confirm')]"
            />
            <field name="restrict_user" eval="1"/>
            <field name="computation_method">use_group</field>
            <field
                name="group_ids"
                eval="[(6,0,[ref('rma_order_mixin_validator_group')])]"
            />
            <field name="restrict_additional" eval="1"/>
            <field name="additional_python_code">result = False
                if not document.approval_template_id:
                result = True
            </field>
        </record>

        <!-- cancel -->
        <record
            id="rma_policy_template_detail_cancel"
            model="policy.template_detail"
        >
            <field name="template_id" ref="rma_policy_template"/>
            <field
                name="field_id"
                search="[('model_id.model','=','rma_order_mixin'),('name','=','cancel_ok')]"
            />
            <field name="restrict_state" eval="1"/>
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','rma_order_mixin'),('value','in',['draft','open','done','terminate'])]"
            />
            <field name="restrict_user" eval="1"/>
            <field name="computation_method">use_group</field>
            <field
                name="group_ids"
                eval="[(6,0,[ref('rma_order_mixin_validator_group')])]"
            />
            <field name="restrict_additional" eval="0"/>
        </record>

        <!-- restart -->
        <record
            id="rma_policy_template_detail_restart"
            model="policy.template_detail"
        >
            <field name="template_id" ref="rma_policy_template"/>
            <field
                name="field_id"
                search="[('model_id.model','=','rma_order_mixin'),('name','=','restart_ok')]"
            />
            <field name="restrict_state" eval="1"/>
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','rma_order_mixin'),('value','in',['cancel','reject'])]"
            />
            <field name="restrict_user" eval="1"/>
            <field name="computation_method">use_group</field>
            <field
                name="group_ids"
                eval="[(6,0,[ref('rma_order_mixin_validator_group')])]"
            />
            <field name="restrict_additional" eval="0"/>
        </record>

        <!-- manual number -->
        <record
            id="rma_policy_template_detail_manual_number"
            model="policy.template_detail"
        >
            <field name="template_id" ref="rma_policy_template"/>
            <field
                name="field_id"
                search="[('model_id.model','=','rma_order_mixin'),('name','=','manual_number_ok')]"
            />
            <field name="restrict_state" eval="1"/>
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','rma_order_mixin'),('value','=','draft')]"
            />
            <field name="restrict_user" eval="1"/>
            <field name="computation_method">use_group</field>
            <field
                name="group_ids"
                eval="[(6,0,[ref('rma_order_mixin_validator_group')])]"
            />
            <field name="restrict_additional" eval="0"/>
        </record>

        <!-- done -->
        <record
            id="rma_policy_template_detail_done"
            model="policy.template_detail"
        >
            <field name="template_id" ref="rma_policy_template"/>
            <field
                name="field_id"
                search="[('model_id.model','=','rma_order_mixin'),('name','=','done_ok')]"
            />
            <field name="restrict_state" eval="1"/>
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','rma_order_mixin'),('value','=','open')]"
            />
            <field name="restrict_user" eval="1"/>
            <field name="computation_method">use_group</field>
            <field
                name="group_ids"
                eval="[(6,0,[ref('rma_order_mixin_user_group')])]"
            />
            <field name="restrict_additional" eval="0"/>
        </record>
    </data>
</odoo>
