<odoo>
    <record id="rma_mixin_view_tree" model="ir.ui.view">
        <field name="name">rma_mixin - Tree</field>
        <field name="model">rma_order_mixin</field>
        <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="type" invisible="1"/>
                <field name="partner_id" widget="many2one_avatar" />
<!--                <field name="contact_id" widget="many2one_avatar" />-->
                <field name="date" />
<!--                <field name="date_deadline" />-->
                <field name="operation_id" />
                <field name="route_template_id" />
            </xpath>
        </field>
    </record>

    <record id="rma_mixin_view_search" model="ir.ui.view">
        <field name="name">rma_mixin - Search</field>
        <field name="model">rma_order_mixin</field>
        <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_search"/>
        <field name="arch" type="xml">
            <data/>
        </field>
    </record>

    <record id="rma_mixin_view_form" model="ir.ui.view">
        <field name="name">rma_mixin - Form</field>
        <field name="model">rma_order_mixin</field>
        <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_form"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="type" />
                <field name="partner_id" widget="many2one_avatar"/>
                <field name="allowed_contact_ids" widget="many2many_avatar" invisible="1"/>
<!--                <field name="contact_id" widget="many2one_avatar"/>-->
            </xpath>
            <xpath expr="//group[@name='header_right']" position="inside">
                <field name="date" />
                <field name="duration_id" />
<!--                <field name="date_deadline" />-->
                <field name="operation_id" />
                <field name="allowed_route_template_ids" widget="many2many_tags" invisible="1"/>
                <field name="route_template_id" domain="[('id','in',[allowed_route_template_ids])]"/>
            </xpath>
            <xpath expr="//page[1]" position="before">
                <page name="detail" string="Details">
                    <field name="line_ids" >
                        <tree>
                            <field name="sequence" widget="handle"/>
                            <field name="product_id"/>
                            <field name="lot_id"/>
<!--                            <field name="uom_qty"/>-->
<!--                            <field name="uom_id"/>-->
                            <field name="qty_to_receive" string="To Receive"/>
                            <field name="qty_to_deliver" string="To Deliver"/>
                        </tree>
                        <form>
                            <group name="form_detail" colspan="4" col="2">
                                <group name="form_detail1" colspan="2" col="1">
                                    <field name="sequence"/>
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="lot_id"/>
                                </group>
                                <group name="form_detail2" colspan="2" col="1">
<!--                                    <field name="allowed_uom_ids" widget="many2many_tags" invisible="1"/>-->
<!--                                    <label for="uom_qty" string="Quantity"/>-->
<!--                                    <div>-->
<!--                                        <field name="uom_qty" class="oe_inline"/>-->
<!--                                        <field name="uom_id" domain="[('id','in',[allowed_uom_ids])]" class="oe_inline"/>-->
<!--                                    </div>-->
                                    <field name="quantity" invisible="1"/>
                                    <field name="currency_id"/>
                                    <field name="allowed_pricelist_ids" widget="many2many_tags" invisible="1"/>
                                    <field name="pricelist_id" domain="[('id','in',[allowed_pricelist_ids])]"/>
                                    <field name="price_unit"/>
                                </group>
                                <notebook>
                                    <page name="move" string="Stock Move">
                                        <field name="stock_move_ids"/>
                                    </page>
                                    <page name="quantity" string="Quantities">
                                        <group name="quantity" colspan="4" col="2">
                                            <group name="quantity1" colspan="2" col="1">
                                                <field name="qty_to_receive"/>
                                                <field name="qty_incoming"/>
                                                <field name="qty_received"/>
                                            </group>
                                            <group name="quantity2" colspan="2" col="1">
                                                <field name="qty_to_deliver"/>
                                                <field name="qty_outgoing"/>
                                                <field name="qty_delivered"/>
                                            </group>
                                        </group>
                                    </page>
                                </notebook>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
